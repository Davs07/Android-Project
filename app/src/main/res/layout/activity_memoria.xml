        <ImageView
            android:id="@+id/img8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
